<div class="container">
    
    <h1>Cadastrar An√∫ncios</h1>

<%= form_for :anuncio, url: anuncio_index_path, html: { multipart: true } do |f| %>

  <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </p>
 
  <p>
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </p>
  
  <p>
    <%= f.label :depoimentoDONO %><br>
    <%= f.text_area :depoimentoDONO %>
  </p>
   
   <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>
 
  <p>
    <%= f.submit "Add" %>
  </p>
<% end %>

</div>