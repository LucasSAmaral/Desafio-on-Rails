
 <div class="container">
   <h1>Listando Anúncios</h1>
   <div class="col-xs-12">
     <div class="table-responsive">
<table class="table table-hover">
  <tr>
    <th>Título</th>
    <th>Descrição</th>
    <th>Depoimento Dono</th>
    <th>Identificação do imóvel</th>
    <th>Imagem</th>
  </tr>
 
  <% @anuncio.each do |anuncio| %>
    <tr>
      <td><%= anuncio.titulo %></td>
      <td><%= anuncio.descricao %></td>
      <td><%= anuncio.depoimentoDONO %></td>
      <td><%= anuncio.imovel_id %></td></td>
      <td><%= image_tag anuncio.image, :class => "img-circle" %></td>
      <td><%= link_to 'Show', anuncio_path(anuncio) %></td>
      <td><%= link_to 'Editar', edit_anuncio_path(anuncio) %></td>
      <td><%= link_to "delete", anuncio, method: :delete,
                                  data: { confirm: "Certeza?" } %></td>
    </tr>
  <% end %>
</table>

</div>

<%= link_to "Home", root_path, :class => "btn btn-primary btn-lg" %>
</div>
</div>